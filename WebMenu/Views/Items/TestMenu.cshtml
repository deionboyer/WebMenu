@model ItemsViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Menu</title>
    <!-- Add CSS styles here -->
</head>
<body>
    <div class="menu">
        <h1>Our Menu</h1>
        <table>
            <tr>
                <th>Item Name</th>
                <th>Meal Type</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
            @foreach (var item in Model.AppList)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.MealType</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>