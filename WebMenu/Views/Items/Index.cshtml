@model ItemsViewModel
@using MenuItems.DataAccess.EF.Models
@{
    ViewData["Title"] = "EMP's BBQ | MENU";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EMP's MENU</title>

    <style>
        body {
        }

        * {
            
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: sans-serif;
        }
        /*herro section*/
        .container {
            position: relative;
            width: 100vw;
            height: 100vw;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .optionList {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('file:///C:\Users\boyer\Downloads\ut5n15nq.png');
        }
    </style>
    

</head>
<body>
    <div class="menu-container">
        <h1>EMP's MENU</h1>
        @foreach (Items item in Model.AppList)
        {

            <div class="menu-item">
                <div class="menu-image">
                    <img src="@item.ImageUrl" alt="@item.ItemName">
                </div>
                <div class="menu-details">
                    <h3>@item.MealType</h3>
                    <p>@item.Description</p>
                    <p class="menu-price">$@item.Price</p>
                    <button type="button" onclick="javascript:openLocation('/Items/Update/0')" class="btn btn-success btn-sm">Add To Cart</button>
                </div>
            </div>

        }
        <div class="menu">
            @foreach (Items item in Model.DinList)
            {
                <div class="menu-item">
                    <div class="menu-image">
                        <img src="@item.ImageUrl" alt="@item.ItemName">
                    </div>
                    <div class="menu-details">
                        <h3>@item.MealType</h3>
                        <p>@item.Description</p>
                        <p class="menu-price">$@item.Price</p>
                        <button type="button" onclick="javascript:openLocation('/Items/Update/0')" class="btn btn-success btn-sm">Add To Cart</button>
                    </div>

                </div>
            }
        </div>
        <div class="menu">
            @foreach (Items item in Model.DesList)
            {
                <div class="menu-item">
                    <div class="menu-image">
                        <img src="@item.ImageUrl" alt="@item.ItemName">
                    </div>
                    <div class="menu-details">
                        <h3>@item.MealType</h3>
                        <p>@item.Description</p>
                        <p class="menu-price">$@item.Price</p>
                        <button type="button" onclick="javascript:openLocation('/Items/Update/0')" class="btn btn-success btn-sm">Add To Cart</button>
                    </div>
                </div>

            }
        </div>
    </div>
</body>
</html>
