@model ItemsViewModel
@using MenuItems.DataAccess.EF.Models

@{
    ViewData["Title"] = "EMP's BBQ | Menu";
}

<script type="text/javascript">
    function openLocation(url) {
        window.location.href = url;
    }

    function confirmDelete(id) {
        $("#hdnDeleteItemID").val(id);
        openModal("deleteModal");
    }

    function cancelDelete() {
        $("#hdnDeleteItemID").val(0);
        closeModal("deleteModal");
    }

    function deleteContact() {
        var id = $("#hdnDeleteItemID").val();
        window.location.href = "/Items/Delete/" + id;
    }
</script>

<input type="hidden" id="hdnDeleteItems" value="0" />

<div class="text-center">
    @if (!String.IsNullOrEmpty(Model.ActionMessage))
    {
        string colorClass = Model.IsActionSuccess ? "alert-success" : "alert-danger";

        <div class="alert @colorClass alert-dismissible fade show" role="alert">
            <strong>@Model.ActionMessage</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <h1 class="display-4">Appetizers</h1>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <tr>
                    <th>ItemName</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th colspan="2"><button type="button" onclick="javascript:openLocation('/Items/Update/0')" class="btn btn-success btn-sm">A</button></th>
                </tr>

                @foreach (Items item in Model.AppList)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td><button type="button" onclick="javascript:openLocation('/Items/Update/@item.ItemID')" class="btn btn-secondary btn-sm">EDIT</button></td>
                        <td><button type="button" onclick="javascript:confirmDelete(@item.ItemID)" class="btn btn-danger btn-sm">DELETE</button></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CONFIRM DELETE</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
                <button type="button" onclick="javascript:cancelDelete()" class="btn btn-secondary btn-sm">CANCEL</button>
                <button type="button" onclick="javascript:deleteContact()" class="btn btn-danger btn-sm">DELETE</button>
            </div>
        </div>
    </div>
</div>