                <th>Item Name</th>
                <th>Meal Type</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model.AppList)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.MealType</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <button type="button" onclick="addToCart(@item.ItemID)">Add to Cart</button>
                    </td>
                </tr>
            }
        </table>
    </div>

